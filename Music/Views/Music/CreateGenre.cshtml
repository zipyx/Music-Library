@model Clam.Areas.Music.Models.AreaUserMusicCategory

@{
    ViewData["Title"] = "CreateGenre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/music/manage">Music</a></li>
        <li class="breadcrumb-item"><a href="/music/manage/genre">Genre</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Genre</li>
    </ol>
</nav>

<hr />
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm(actionName: "CreateGenre", "Music", method: FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationSummary(message: "Ensure Field is filled in by specific requirements.", htmlAttributes: new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.CategoryName, null, new { @class = "col-md-4 col-form-label control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CategoryName, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
